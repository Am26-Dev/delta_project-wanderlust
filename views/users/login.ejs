<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wanderlust</h1>
    <hr class="col-6 offset-3 ">
    <div class="col-6 offset-3 mt-2">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3"> 
                <label for="username" class="from-label mb-1">Username</label>
                <input 
                    type="text" 
                    name="username" 
                    id="username"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3"> 
                <label for="password" class="from-label mb-1">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password"
                    class="form-control"
                    required
                />
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>