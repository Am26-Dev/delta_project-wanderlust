<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SingUp on Wanderlust</h1>
    <hr class="col-6 offset-3 ">
    <div class="col-6 offset-3 mt-2">
        <form action="/singup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3"> 
                <label for="username" class="from-label mb-1">Username</label>
                <input 
                    type="text" 
                    name="username" 
                    id="username"
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter Username</div>
            </div>
            <div class="mb-3"> 
                <label for="email" class="from-label mb-1">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3"> 
                <label for="password" class="from-label mb-1">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password"
                    class="form-control"
                    required
                />
            </div>
            <button class="btn btn-success">SingUp</button>
        </form>
    </div>
</div>